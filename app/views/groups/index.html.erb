<div class="group_holder">
  <% @groups.each do |group| %>
    <div class="group_card">
      <div class="card_element">
        <div class="picture_holder">
          <img src=<%= group.icon %> alt="group picture">
        </div>
        <div class="group_description_holder">
          <div class="name_total_holder">
            <h5 >
              <%= link_to "#{group.name}", user_group_expenses_path(current_user,group.id), class:"group_name"%>
            </h5>
            <h5 class="group_amount">$<%=number_with_delimiter(group.total_amount_by_group(group.id))%></h5>
          </div>
          <div class="group_date_holder">
            <hr>
            <p class="group_date_created">
              <p class="group_date_created">
                <%= group.created_at.strftime('%d %B %Y') %>
              </p>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div>
    <button class="button_holder" ><%= link_to "Add a new category", new_user_group_path(current_user), class:"button_text" %></button>
  </div>
</div>
